<div class="col-xs-12">
	<h2><%= t('new_article.subject') %></h2>

	<%= form_for :article, url: articles_path do |f| %>

		<% if @article && @article.errors.any? %>
			<p>
				<ul>
					<% @article.errors.full_messages.each do |msg| %>
						<li><%= msg %></li>
					<% end %>
				</ul>
			</p>
		<% end %>

		<p>
			<%= f.label t('new_article.title') %><br />
			<%= f.text_field :title %>
		</p>

		<p>
			<%= f.label t('new_article.text') %><br />
			<%= f.text_area :text %>
		</p>

		<p>
			<%= f.submit t('new_article.btn_new') %>
		</p>

	<% end %>
</div>