<h2>Edit article</h2>

<%= form_for :article, url: article_path(@article), method: :put do |f| %>

	<% if @article && @article.errors.any? %>
		<p>
			<ul>
				<% @article.errors.full_messages.each do |msg| %>
					<li><%= msg %></li>
				<% end %>
			</ul>
		</p>
	<% end %>

	<p>
		<%= f.label :title %><br />
		<%= f.text_field :title %>
	</p>

	<p>
		<%= f.label :text %><br />
		<%= f.text_area :text %>
	</p>

	<p>
		<%= f.submit %>
	</p>

<% end %>

<%= form_for :article, url: article_path(@article), method: :delete do |f| %>

	<p>
		<%= f.submit 'Delete article' %>
	</p>

<% end %>