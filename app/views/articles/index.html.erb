<div class="col-xs-12">
	<% @articles.each do |article| %>
		<div class="well">

			<h3><%= article.title %></h3>
					
			<br />
			<p>
				<%= article.text %>
			</p>
			<br />
			
			<p>
				<%= link_to 'Show', article_path(article) %> |
				<%= link_to 'Edit', edit_article_path(article) %> |
				<%= link_to 'Delete', article_path(article), method: :delete, data: { confirm: 'Are you sure?' } %>
			</p>

		</div>
	<% end %>
</div>