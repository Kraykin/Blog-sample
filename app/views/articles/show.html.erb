<div class="col-xs-12">
	<h2><%= @article.title %></h2>

	<p><%= @article.text %></p>

	<hr />

	<p>
		<% if if user_signed_in? then @article.author_id == current_user.id end %>
			<%= link_to 'Edit', edit_article_path(@article) %> |
			<%= link_to 'Delete', article_path(@article), method: :delete, data: { confirm: 'Are you sure?' } %>
		<% end %>
	</p>
	<br />
	<span style="font-size: 75%; color: #999">Created at <%= @article.created_at %></span>

	<h3><%= t('show_article.comments') %></h3>

	<% @article.comments.each do |comment|  %>

		<p>
			<i><%= comment.author %></i> said:<br />
			<%= comment.body %>
		</p>

	<% end %>


	<h3><%= t('show_article.add_comment') %></h3>

	<p>
		<%= form_for([@article, @article.comments.build]) do |f| %>

			<p>
				<%= f.label :body %><br />
				<%= f.text_area :body %>
			</p>

			<p>
				<%= f.submit 'Create comment'%>
			</p>

		<% end %>
	</p>
</div>