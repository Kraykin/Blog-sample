<div class="col-xs-12">
	<h2><%= @article.title %></h2>

	<p><%= @article.text %></p>

	<hr />

	<p><%= link_to 'Show all articles', articles_path %></p>

	<h3>Comments:</h3>

	<% @article.comments.each do |comment|  %>

		<p>
			<i><%= comment.author %></i> said:<br />
			<%= comment.body %>
		</p>

	<% end %>


	<h3>Add comment:</h3>

	<p>
		<%= form_for([@article, @article.comments.build]) do |f| %>

			<p>
				<%= f.label :body %><br />
				<%= f.text_area :body %>
			</p>

			<p>
				<%= f.submit 'Create comment'%>
			</p>

		<% end %>
	</p>
</div>